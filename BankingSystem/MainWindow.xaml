<Window x:Class="BankingSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankingSystem"
        mc:Ignorable="d"
        Title="Bank Manager" Height="350" Width="300">
    <Grid Background="WhiteSmoke">
        <Button x:Name="PersonalManager" Background="WhiteSmoke" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center"
        		Content="Konta Osobiste" Height="48" Width="184" Click="PersonalManager_Click" Margin="0,80,0,0" />
        <Button x:Name="CompanyManager" HorizontalAlignment="Center" VerticalAlignment="Center"
            	Content="Konta Firmowe"  Background="WhiteSmoke" Height="48" Width="185" 
            	Click="CompanyManager_Click" Margin="0,180,0,0"/>
        <Image x:Name="logo" Source="images/Logo3.png" HorizontalAlignment="Center" Height="120" 
               Margin="0,25,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>